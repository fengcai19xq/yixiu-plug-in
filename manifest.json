{
  "name": "yixiu-plug-in",
  "description": "牛刀小试",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
   "128": "images/eagle.png",
   "48": "images/eagle.png",
   "16": "images/eagle.png"
 },
  "page_action": {
    "default_icon": "images/eagle.png",
    "default_title": "牛刀小试",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["lib/jquery-3.2.1.min.js","js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "js": ["lib/jquery-3.2.1.min.js","js/content.js"],
      "matches": ["https://*.taobao.com/*"]// 被植入到页面，只在这些站点下 content_scripts会运行
    }
  ],
  "web_accessible_resources": [
//    "page/newTask.html",
    "lib/*/*/*",
    "js/task.js"],
"permissions": [
    "cookies",
//    "webRequest",
     "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
